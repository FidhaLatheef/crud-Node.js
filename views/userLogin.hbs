<div class="container-fluid d-flex flex-column justify-content-center align-items-center login-main">

<form class="login-container-user" method="post" action="/login">
  

  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="password">
  </div>

    <div class="mb-3">
            {{#if error}}
            <b class=" error-text ">{{message}}</b>
            {{/if}}
        </div>

 
  <button type="submit" class="btn custom-btn btn-login "><span>login</span></button>
     <div class="container d-flex justify-content-center mt-3">
        <a href="/signup" class="signupText">Don't Have Account? Signup!</a>
    </div>
</form>

</div>